{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "",
  "type": "object",
  "properties": {
    "module": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-zA-Z][a-zA-Z0-9_,$;]+$"
    },
    "classes": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "required": [
          "class_type",
          "class_name"
        ],
        "properties": {
          "class_type": {
            "$ref": "#/$defs/name"
          },
          "class_name": {
            "$ref": "#/$defs/name"
          },
          "fields": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "required": [
                "class_name",
                "class_type"
              ],
              "properties": {
                "class_name": {
                  "$ref": "#/$defs/name"
                },
                "class_type": {
                  "$ref": "#/$defs/name"
                },
                "array_definition": {
                  "$ref": "#/$defs/ArrayDef"
                }
              }
            }
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "class_type": {
                  "enum": [
                    "Structure",
                    "Enum"
                  ]
                }
              }
            },
            "then": {
              "required": [
                "fields"
              ],
              "not": {
                "required": [
                  "element"
                ]
              }
            }
          },
          {
            "if": {
              "properties": {
                "class_type": {
                  "const": "Optional"
                }
              }
            },
            "then": {
              "required": [
                "element"
              ],
              "not": {
                "required": [
                  "fields"
                ]
              }
            }
          }
        ]
      }
    }
  },
  "required": [
    "module",
    "classes"
  ],
  "$defs": {
    "name": {
      "title": "String",
      "description": "A string with minimum 2 chars satisfying ^[a-zA-Z][a-zA-Z0-9_,$;]+$",
      "type": "string",
      "minLength": 2,
      "pattern": "^[a-zA-Z][a-zA-Z0-9_,$;]+$"
    },
    "ArrayDef": {
      "type": "object",
      "properties": {
        "fixed_length": {
          "type": "number"
        },
        "encode_length": {
          "type": "boolean"
        },
        "element": {
          "$ref": "#/$defs/name"
        }
      },
      "required": [
        "element"
      ]
    }
  }
}